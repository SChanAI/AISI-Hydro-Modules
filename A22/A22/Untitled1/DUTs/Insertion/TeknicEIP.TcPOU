    <Method Name="traverse" Id="{b8282b74-25fa-40ac-93c2-963bfe91f1d1}">
      <Declaration><![CDATA[METHOD traverse : BOOL
VAR_INPUT
	direction : BOOL; //direction (F = inwards, T = outwards)
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[A := direction;
traverse := requestPulses(1);]]></ST>
      </Implementation>
